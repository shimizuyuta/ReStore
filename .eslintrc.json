{
  "extends": [
    "next",
    "next/core-web-vitals",
    "plugin:prettier/recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
  ],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off",
    "import/order": [2,  {"alphabetize": {"order": "asc"}}],
    "prettier/prettier":[
      "error",
      {
        "trailingComma": "all",
        "singleQuote": true,
        "semi": false,
        "printWidth": 80,
        "tabWidth": 2
      }
    ]
  }
}
